<HTML>

<head>
  <title>PHOENIX E-mart</title>
  <link rel="icon" type="image/x-icon" href="/images/logo.png">

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
    integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
  <link rel="stylesheet" href="/CSS/HomeStyles.css">
  <link rel="stylesheet" href="/CSS/navbar.css">
  <!-- <script src="script.js"></script> -->
  <script>
    function logoutConf() {
      var promp = document.getElementById("logout-prompt");
      promp.classList.remove("hidden")
    }

    function hide() {
      var promp = document.getElementById("logout-prompt")
      promp.classList.add("hidden")
    }
  </script>
</head>

<body>

  <div class="upper-nav">
    <nav class="navbar navbar-expand-sm  navbar-light">
      <ul class="navbar-nav">
        <li class="nav-brand"><a href="/homeAS/<%=user %>"><img src="/images/PHOENIX - Copy.png" height="50"></a></li>
        <li class="nav-item"><a class="nav-search" href="/homeAS/<%=user %>">Home</a></li>
        <li class="nav-item"><a class="nav-search" href="/aboutUs">About Us</a></li>
        <li class="nav-item"><a class="nav-search" href="/help/<%=user %>">Contact Us</a></li>
        <li class="nav-item1">
          <form action="/search" method="post">
            <div class="Search">

              <div class="search-item">
                <i class="fas fa-search"></i>
                <input class="products" type="text" name="searchString" placeholder="Search for products">
              </div>

            </div>
            <input type="submit" hidden />
          </form>
        </li>
        <li class="nav-item"></li>
      </ul>
      <div class="userLogo">
        <img src="/images/userlogo.jpeg" alt="userLogo" type="button" data-bs-toggle="offcanvas"
          data-bs-target="#offcanvasRight" aria-controls="offcanvasRight" style="border-radius: 100%;width: 40px;">
        <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel"
          style="background-color: rgb(138, 43, 226);">
          <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasRightLabel" style="color:white;">Hello <%= user %> !
            </h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
          </div>
          <hr>
          <div class="offcanvas-body"
            style="background-image: linear-gradient(180deg, rgb(138, 43, 226),  rgb(189, 119, 255));">
            <a href="/help/<%=user %>" class="nav-search">Help</a>
            <hr>
            <a href="/userProfile/<%= user %>" class="nav-search">User profile</a>
            <hr>
            <a href="/MyOffers/<%= user %>" class="nav-search">My Offers</a>
            <hr>
            <a href="/Myads/<%= user %>" class="nav-search">My Ads</a>
            <hr>
            <a href="/sell/<%= user %>" class="nav-search">Sell</a>
            <hr>
            <!-- <input type="button" class="nav-search" onclick="logoutConf()" value="logout"> -->
            <p class="nav-search" onclick="logoutConf()" style="cursor: pointer;">Logout</p>
            <!-- <a href="" class="nav-search" onclick="logoutConf()">Logout</a> -->
            <hr>
            <div id="logout-prompt" class="hidden">
              <form action="/logout" method="post">
                <div style="background-color: red; margin-bottom: 2%; display:block; height:28px;">
                  <input type="button" value="" class="btn-close lbtn" onclick="hide()" style="margin-left: 12%;">
                  <!-- <button class="btn-close lbtn" onclick="hide()"></button> -->
                </div>
                <p style="margin-left: 5%; font-weight:bold;">Are you sure you want to log out ?</p>
                <input type="submit" value="Yes" class="lbtn btn btn-success">
                <!-- <a href="/sign-in"><button class="lbtn btn btn-success">Yes</button></a> -->
              </form>
            </div>
          </div>
        </div>
      </div>
    </nav>
  </div>

