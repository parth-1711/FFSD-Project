<HTML>
  <head>
    <title>PHOENIX E-mart</title>
    <link rel="icon" type="image/x-icon" href="/images/logo.png" />

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
      integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/CSS/HomeStyles.css" />
    <link rel="stylesheet" href="/CSS/navbar.css" />
  </head>

  <body>
    <div class="upper-nav">
      <nav class="navbar navbar-expand-sm navbar-light">
        <ul class="navbar-nav">
          <li class="nav-brand">
            <a href="/"><img src="/images/PHOENIX - Copy.png" height="50" /></a>
          </li>
          <li class="nav-item"><a class="nav-search" href="/">Home</a></li>
          <li class="nav-item">
            <a class="nav-search" href="/AboutUs">About Us</a>
          </li>
          <li class="nav-item">
            <a class="nav-search" href="/help">Contact Us</a>
          </li>
          <li class="nav-item1">
            <form action="/search" method="post">
              <div class="Search">
                <div class="search-item">
                  <i class="fas fa-search"></i>
                  <input
                    class="products"
                    type="text"
                    name="searchString"
                    placeholder="Search for products"
                  />
                </div>
              </div>
              <input type="submit" hidden />
            </form>
          </li>
        </ul>
      </nav>
    </div>

    <div class="signup">
      <a class="nav-log" href="/sign-in">Login</a>
      <a class="nav-log" style="margin-left: 10px" href="/sign-up">Sign Up</a>
    </div>

    <div class="container1">
      <div class="catcon">
        <a class="category_1" href="/electronics">
          <div class="electronics" class="categories">
            <img
              class="catimg"
              src="/images/electronicscat.png"
              alt="elecimg"
            />
            <h6>Electronics</h6>
          </div>
        </a>
        <a class="category_1" href="/automobile">
          <div class="automobiles" class="categories">
            <img class="catimg" src="/images/automobiles.png" alt="autoimg" />
            <h6>Automobiles</h6>
          </div>
        </a>
        <a class="category_1" href="/mobile">
          <div class="stationary" class="categories">
            <img class="catimg" src="/images/smartphone.png" alt="bookimg" />
            <h6>Mobiles</h6>
          </div>
        </a>
        <a class="category_1" href="/furniture">
          <div class="furniture" class="categories">
            <img class="catimg" src="/images/furniture.png" alt="furimg" />
            <h6>Furniture</h6>
          </div>
        </a>
        <a class="category_1" href="/fashion">
          <div class="fashion" class="categories">
            <img class="catimg" src="/images/fashioncat.png" alt="fashionimg" />
            <h6>Fashion</h6>
          </div>
        </a>
        <a class="category_1" href="/hardware">
          <div class="hardware" class="categories">
            <img class="catimg" src="/images/hardware.png" alt="hardwareimg" />
            <h6>Hadware Accessories</h6>
          </div>
        </a>
      </div>
    </div>

    <div class="carousel">
      <!-- <img src="/images/bg.jpeg" alt="baground image" width="100%"> -->
      <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <div class="imgtitle">
              Electronics
            </div>
            <img src="/images/home-appliances.jpg" class="d-block w-100" alt="empty cell" style="height:35rem;">
          </div>
          <div class="carousel-item">
            <div class="imgtitle">
              Automobiles
            </div>
            <img src="/images/cars.jpg" class="d-block w-100" alt="empty cell" style="height:35rem;">
          </div>
          <div class="carousel-item">
            <div class="imgtitle">
              Mobile Phones
            </div>
            <img src="/images/mobile.jpg" class="d-block w-100" alt="empty cell" style="height:35rem;">
          </div>
          <div class="carousel-item">
            <div class="imgtitle">
              Furniture
            </div>
            <img src="/images/furniture1.jpeg" class="d-block w-100" alt="..." style="height:35rem;">
          </div>
          <div class="carousel-item">
            <div class="imgtitle">
              Fashion
            </div>
            <img src="/images/fashion5.jpg" class="d-block w-100" alt="..." style="height:35rem;">
          </div>
          <div class="carousel-item">
            <div class="imgtitle">
              Hardware Tools
            </div>
            <img src="/images/hardware3.jpg" class="d-block w-100" alt="..." style="height:35rem;">
          </div>
  
        </div>
      </div>
    </div>

  <div class="recom">
    <h3>Recommended Products</h3>
  </div>
  <div class="cardscon">
    <div class="category1">

      <div class="card-deck">
        <div class="container">
          <% for(let i=0;i<16;i++){ %>
          <a href="/product?param=<%= ProductList[i]._id%>">
            
            <div class="card" style="width: 18rem; height:21.5rem; margin:15px; float:left; position:static; border-radius:5px;">
              <img class="card-img-top" src="/images/fsd-product/<%= ImagesArray[i] %>" style="object-fit:contain" alt="Card image cap">
              <div class="card-body">
                <div class="pdttitle" style="overflow: hidden;">
                <h5 class="card-title"><%= ProductList[i].title%></h5>
              </div>
                <div class="pdtprice" >
                  <h5>â‚¹<%= ProductList[i].setprice%></h5>
                </div><hr style="margin-top:0;">
                <div class="pdtdesc" >
                  <%= ProductList[i].address%>
                  
                </div>
                <div style="color: rgb(101, 101, 101); font-size:13px; padding-left:2px;">
                  posted 5 days ago
                </div>
              </div>
            </div>
          </a>
          <% } %>

        </div>
      </div>
    </div>
    </div>
    <div class="wavy_footer">
      <%- include('partials/footer_wave'); -%>
    </div>

    <style>
      @import url("https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&display=swap");
    </style>

  
</body>
  
</HTML>
